<% provide(:title, 'Forgot password | Gofixam')%>
<div class="login_wrapper">
<div class="logo_icon">
<%=link_to  root_path do  %>
  <%=image_tag 'logo.PNG',class:'img-thumbnail'%>
<% end -%>
</div>



<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },:html=>{class:"form-signin"}) do |f| %>

<h3 class="form-signin-heading">Forgot your password?</h3>
  <%= f.error_notification %>



  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true,style:"border-radius:0px !important" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions",class:"btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>


<div class="devise_login_links">
  <%= render "devise/shared/links" %>
  </div>
</div>


<%= render 'shared/footer2'%>


