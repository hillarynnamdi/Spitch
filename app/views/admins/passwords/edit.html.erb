<% provide(:title, 'Change password | Gofixam')%>
<div class="login_wrapper">
  <div class="logo_icon">
<%=link_to  home_index_path do  %>
  <%=image_tag 'gopng.png', class:"img-thumbnail",id:"nav-icon"%>
<%end%>
</div>

<h3 class="form-signin-heading">Change your password</h3>


<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put,class:"form-signin"}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password",class:"btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<div class="devise_login_links">
  <%= render "devise/shared/links" %>
  </div>
</div>


<%= render 'shared/footer_scroll2'%>
